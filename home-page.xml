<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
    <Label text="Label" />
    <ActionBar title="Home Page" class="action-bar">
    </ActionBar>

    <ScrollView>
        <DockLayout id="main-layout" stretchLastChild="false">
            <Button dock="bottom" class="btn btn-primary btn-rounded-lg" text="credits"
                tap="viewCredits" />
            <Button dock="bottom" class="btn btn-primary btn-rounded-lg" text="play"
                tap="onButtonTap" />
        </DockLayout>

    </ScrollView>
</Page>
